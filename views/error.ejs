<%- include("partials/header") %>

<main>
  <style>
    .error-section {
      padding: 60px 20px;
      text-align: center;
      max-width: 600px;
      margin: 0 auto;
    }
    .error-section h1 {
      font-size: 2.5em;
      color: #f46d25;
      margin-bottom: 20px;
    }
    .error-section p {
      font-size: 1.2em;
      color: #333;
      margin-bottom: 30px;
    }
    .error-section a {
      display: inline-block;
      background-color: #f46d25;
      color: white;
      padding: 12px 30px;
      border-radius: 5px;
      text-decoration: none;
      transition: background 0.3s;
    }
    .error-section a:hover {
      background-color: #d75c1f;
    }
  </style>

  <section class="error-section">
    <h1>Error</h1>
    <p><%= message %></p>
    <a href="/">Return to Home</a>
  </section>
</main>

<%- include("partials/footer") %>
