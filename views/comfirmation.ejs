<%- include("partials/header") %>

<main>
  <style>
    .confirmation {
      padding: 60px 20px;
      background-color: #fff;
      text-align: center;
    }
    .confirmation h2 {
      font-size: 2.5em;
      color: #f46d25;
      margin-bottom: 20px;
    }
    .confirmation p {
      font-size: 1.2em;
      color: #444;
      margin-bottom: 15px;
      line-height: 1.5;
    }
    .confirmation .address {
      font-size: 1.1em;
      color: #333;
      background-color: #f9f9f9;
      padding: 15px;
      border-radius: 5px;
      word-break: break-all;
      margin: 20px 0;
      border: 1px solid #ddd;
    }
    .confirmation button {
      background-color: #f46d25;
      color: #fff;
      padding: 12px 30px;
      border: none;
      border-radius: 5px;
      font-size: 1em;
      cursor: pointer;
      transition: background 0.3s;
    }
    .confirmation button:hover {
      background-color: #d75c1f;
    }
    .confirmation .back-link {
      display: inline-block;
      margin-top: 20px;
      color: #f46d25;
      text-decoration: none;
      font-size: 1em;
      transition: color 0.3s;
    }
    .confirmation .back-link:hover {
      color: #d75c1f;
    }
    @media (max-width: 768px) {
      .confirmation h2 {
        font-size: 2em;
      }
      .confirmation p {
        font-size: 1em;
      }
      .confirmation .address {
        font-size: 0.95em;
      }
    }
  </style>

  <section class="confirmation">
    <h2>Confirm Your Donation to <%= donation.org %></h2>
    <p>
      You are donating <strong>$<%= donation.amount %></strong> using
      <strong><%= donation.crypto.toUpperCase() %></strong>.
    </p>
    <p>Please send your payment to the following address:</p>

    <div class="address" id="crypto-address"><%= address %></div>
    <button onclick="copyToClipboard()">Copy Address</button>

    <p>Your Transaction ID: <strong><%= donation.txid %></strong></p>
    <p>Email: <strong><%= donation.email %></strong></p>

