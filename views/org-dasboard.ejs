<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Organization Dashboard</title>
    <link
      href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mx-auto p-4">
      <h1 class="text-3xl font-bold mb-4">Organization Dashboard</h1>
      <form action="/org-dashboard" method="POST">
        <label class="block text-gray-700 mb-2">Select Your Organization</label>
        <select name="orgId" class="border p-2 w-full mb-4" required>
          <option value="org1">Helping Hands</option>
          <option value="org2">Bright Futures</option>
          <option value="org3">Community Care</option>
        </select>
        <button type="submit" class="bg-green-500 text-white p-2 rounded">
          View Donations
        </button>
      </form>
      <% if (orgDonations) { %>
      <h2 class="text-2xl font-bold mt-6">Donations Received</h2>
      <ul class="list-disc pl-6">
        <% orgDonations.forEach(donation => { %>
        <li>
          <%= donation.name %> donated $<%= donation.amount %> in <%=
          donation.crypto ? donation.crypto.toUpperCase() : 'Unknown Crypto' %>
        </li>
        <% }); %>
      </ul>
      <p class="mt-4">
        Total: $<%= orgDonations.reduce((sum, d) => sum + Number(d.amount), 0)
        %>
      </p>
      <% } %>
      <a href="/" class="text-blue-500 mt-4 block">Back to Home</a>
    </div>
  </body>
</html>
