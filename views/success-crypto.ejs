<%- include("partials/header") %>

<main>
  <style>
    .success-section {
      min-height: 80vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      padding: 40px 20px;
    }
    .success-container {
      max-width: 600px;
      width: 100%;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      padding: 40px;
      text-align: center;
    }
    .success-container h1 {
      font-size: 2.5em;
      color: #333;
      margin-bottom: 20px;
      font-weight: 700;
    }
    .success-container p {
      font-size: 1.1em;
      color: #666;
      line-height: 1.6;
      margin-bottom: 20px;
    }
    .donation-details {
      background: #f8f9fa;
      padding: 20px;
      border-radius: 8px;
      margin: 20px 0;
      font-size: 1em;
      color: #333;
    }
    .donation-details p {
      margin: 5px 0;
    }
    .home-btn {
      display: inline-block;
      background-color: #f46d25;
      color: #fff;
      padding: 12px 30px;
      border-radius: 5px;
      text-decoration: none;
      font-size: 1em;
      transition: background 0.3s;
      margin-top: 20px;
    }
    .home-btn:hover {
      background-color: #d75c1f;
    }
    @media (max-width: 768px) {
      .success-container h1 {
        font-size: 2em;
      }
      .success-container {
        padding: 20px;
      }
    }
  </style>

  <section class="success-section">
    <div class="success-container">
      <h1>Thank You for Your Donation!</h1>
      <p>
        Your donation has been successfully submitted and is pending approval.
        We’ll notify you once it’s confirmed.
      </p>
      <div class="donation-details">
        <p><strong>Name:</strong> <%= name %></p>
        <p><strong>Email:</strong> <%= email %></p>
        <p><strong>Amount:</strong> $<%= amount %></p>
        <p><strong>Organization:</strong> <%= org %></p>
        <p><strong>Cryptocurrency:</strong> <%= crypto %></p>
        <% if (txid) { %>
        <p><strong>Transaction ID:</strong> <%= txid %></p>
        <% } %>
      </div>
      <a href="/" class="home-btn">Back to Home</a>
    </div>
  </section>
</main>

<%- include("partials/footer") %>
