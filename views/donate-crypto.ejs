<%- include("partials/header") %>

<main>
  <style>
    .crypto-section {
      padding: 60px 20px;
      text-align: center;
      max-width: 600px;
      margin: 0 auto;
    }
    .crypto-section h1 {
      font-size: 2.5em;
      color: #f46d25;
      margin-bottom: 20px;
    }
    .crypto-section p {
      font-size: 1.2em;
      color: #333;
      margin-bottom: 15px;
    }
    .crypto-section form {
      margin-top: 20px;
    }
    .crypto-section label {
      display: block;
      text-align: left;
      margin: 10px 0 5px;
      color: #333;
    }
    .crypto-section input[type="file"] {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      font-size: 1em;
    }
    .crypto-section button {
      background-color: #f46d25;
      color: white;
      padding: 12px 30px;
      border: none;
      border-radius: 5px;
      font-size: 1.1em;
      cursor: pointer;
      transition: background 0.3s;
    }
    .crypto-section button:disabled {
      background-color: #ccc;
      cursor: not-allowed;
    }
    .crypto-section button:hover:not(:disabled) {
      background-color: #d75c1f;
    }
    .address-container {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      margin-bottom: 15px;
    }
    .address-container span {
      font-weight: bold;
      word-break: break-all;
    }
    .address-container button {
      background-color: #f46d25;
      color: white;
      padding: 5px 10px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .address-container button:hover {
      background-color: #d75c1f;
    }
  </style>

  <section class="crypto-section">
    <h1>Complete Your Donation</h1>
    <p>
      Thank you, <%= donation.name %>, for donating $<%= donation.amount %> to
      <%= donation.org %>!
    </p>
    <p>
      Please send the payment in <%= donation.crypto %> to the following
      address:
    </p>
    <div class="address-container">
      <span id="cryptoAddress"><%= address %></span>
      <button onclick="copyAddress()">Copy</button>
    </div>
    <p>
      Once youâ€™ve sent the payment, please upload a screenshot of the
      transaction as proof of payment.
    </p>
    <form
      method="POST"
      action="/confirm-donation"
      enctype="multipart/form-data"
    >
      <input type="hidden" name="donationId" value="<%= donation._id %>" />
      <label for="proofImage">Upload Proof of Payment (Screenshot):</label>
      <input
        type="file"
        id="proofImage"
        name="proofImage"
        accept="image/*"
        required
        onchange="enableButton()"
      />
      <button type="submit" id="confirmButton" disabled>
        I Have Sent the Payment
      </button>
    </form>
  </section>

  <script>
    function enableButton() {
      const fileInput = document.getElementById("proofImage");
      const confirmButton = document.getElementById("confirmButton");
      confirmButton.disabled = !fileInput.files.length;
    }

    function copyAddress() {
      const address = document.getElementById("cryptoAddress").innerText;
      navigator.clipboard.writeText(address).then(() => {
        alert("Address copied to clipboard!");
      });
    }
  </script>
</main>

<%- include("partials/footer") %>
